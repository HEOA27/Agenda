<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FiltroActivity">

    <TextView
        android:id="@+id/viewFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/hint_filtro"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/cbxFiltro"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:entries="@array/strFiltros" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewFecha"
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textColor="#292828"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/viewSeleccionado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaFiltro"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>